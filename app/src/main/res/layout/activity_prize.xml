<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="בחר פרס"
        android:layout_below="@+id/chronometer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        android:id="@+id/title" />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:textColor="@android:color/black"
        android:text="פרס 1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textAllCaps="false"
        android:layout_marginRight="45dp"
        android:layout_below="@id/title"
        android:textSize="25dp"
        android:tag="a"
        android:onClick="prizeClicked"
        android:id="@+id/prizeA"
        android:textAlignment="center" />


    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_toLeftOf="@id/prizeA"
        android:layout_marginRight="40dp"
        android:text="פרס 2"
        android:tag="b"
        android:onClick="prizeClicked"
        android:layout_marginTop="40dp"
        android:textAllCaps="false"
        android:layout_below="@id/title"
        android:textSize="25dp"
        android:id="@+id/prizeB" />

    <Button
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text="Windis Prize"
        android:textAllCaps="false"
        android:id="@+id/stop"
        android:onClick="windisPrizeClicked"
        android:layout_below="@id/prizeA"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:text=""
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:id="@+id/stopper" />

</RelativeLayout>
