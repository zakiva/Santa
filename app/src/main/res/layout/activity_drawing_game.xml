<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <!-- This is the view on which we will draw. -->
    <view
        android:layout_width="500dp"
        android:layout_height="match_parent"
        class="com.example.zakiva.santa.Models.MainDrawingView"
        android:id="@+id/single_touch_view"
        android:layout_gravity="left|top"
        android:background="#ffffff" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text=""
        android:id="@+id/pen"
        android:visibility="gone"
        android:tag="1"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="drawingModeClicked"
        android:background="@drawable/pen_icon_color"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text=""
        android:tag="0"
        android:visibility="gone"
        android:id="@+id/eraser"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:onClick="drawingModeClicked"
        android:background="@drawable/eraser_icon"
        android:layout_below="@id/pen"
        android:layout_marginTop="14dp" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text=""
        android:tag="0"
        android:visibility="gone"
        android:id="@+id/restart"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:onClick="restartDrawClicked"
        android:background="@drawable/restart_icon"
        android:layout_below="@id/eraser"
        android:layout_marginTop="14dp" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="Done"
        android:tag="0"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/doneButton"
        android:onClick="doneButtonClicked" />

    <TextView
        android:text=""
        android:textSize="40dp"
        android:textColor="@color/com_facebook_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:id="@+id/stopper" />
</RelativeLayout>