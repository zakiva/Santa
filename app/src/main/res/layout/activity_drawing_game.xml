<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/parentLayout"
    >


    <ImageView
        android:id="@+id/sourceImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/rec_400"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

    <!-- This is the view on which we will draw. -->
    <view
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        class="com.example.zakiva.santa.Models.MainDrawingView"
        android:id="@+id/single_touch_view" />


    <View android:id="@+id/primerdivisor1"
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="49dp"
        android:background="#dddddd" />

    <View android:id="@+id/primerdivisor2"
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="49dp"
        android:background="#dddddd" />

    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/cta_rectangle"
        />




    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text=""
        android:id="@+id/pen"
        android:visibility="gone"
        android:tag="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:onClick="drawingModeClicked"
        android:background="@drawable/pen_icon_color"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text=""
        android:tag="0"
        android:visibility="gone"
        android:id="@+id/eraser"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/pen"
        android:layout_marginRight="10dp"
        android:onClick="drawingModeClicked"
        android:background="@drawable/eraser_icon"
        android:layout_marginTop="14dp" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text=""
        android:tag="0"
        android:visibility="gone"
        android:id="@+id/restart"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/eraser"
        android:layout_marginRight="10dp"
        android:onClick="restartDrawClicked"
        android:background="@drawable/trash_icon"
        android:layout_marginTop="14dp" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text=""
        android:tag="0"
        android:visibility="gone"
        android:id="@+id/undo"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/restart"
        android:layout_marginRight="10dp"
        android:background="@drawable/undo_icon"
        android:onClick="undoButtonClicked"
        android:layout_marginTop="14dp" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="Done"
        android:tag="0"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/doneButton"
        android:onClick="doneButtonClicked" />

    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:text="replace"
        android:tag="0"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/replaceDrawingHelperButton"
        android:onClick="replaceDrawingButtonHelperClicked" />

    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:text="clue"
        android:tag="0"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/clueHelperButton"
        android:onClick="clueHelperButtonClicked" />

    <TextView
        android:text=""
        android:textSize="40dp"
        android:textColor="@color/com_facebook_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:id="@+id/stopper" />

    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:text="flash"
        android:tag="0"
        android:visibility="gone"
        android:id="@+id/flashHelperButton"
        android:onClick="flashHelperButtonClicked"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/activityBackground"
        android:background="#99000000" />
</RelativeLayout>