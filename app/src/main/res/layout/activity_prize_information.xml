<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/toolbarLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:minHeight="1dp"
            android:layout_width="match_parent"
            android:layout_height="53dp">
        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:onClick="backToPrizeClicked"
            android:layout_alignParentLeft="true">

            <ImageView
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="backToPrizeClicked"
                android:background="@drawable/ic_ac_nav_back"
                android:id="@+id/homeScreen" />

        </RelativeLayout>

        <View android:layout_width="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_height="8dp"
            android:background="@drawable/shadow_below"/>

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarLayout">
        <TabHost
            android:id="@+id/tabsBox"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:theme="@style/TabWidgetTheme">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/tabA"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageViewTabA"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tabsBox"
                            android:layout_marginTop="30dp"
                            android:adjustViewBounds="true" />

                        <RelativeLayout
                            android:id="@+id/headlinesBoxTabA"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageViewTabA">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="15dp">

                                <TextView
                                    android:id="@+id/giftNameTabA"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Name of the gift"
                                    android:textColor="#303030"
                                    android:textSize="17sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/companyNameTabA"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/giftNameTabA"
                                    android:text="Comapny name"
                                    android:textColor="#303030"
                                    android:textSize="13sp" />
                            </RelativeLayout>


                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="15dp">

                                <TextView
                                    android:id="@+id/moneyTabA"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:text="100$"
                                    android:textColor="#9254ff"
                                    android:textSize="17sp" />

                                <TextView
                                    android:id="@+id/worthTabA"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_below="@+id/moneyTabA"
                                    android:text="Worth"
                                    android:textColor="#aaaaaa"
                                    android:textSize="13sp" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/informationTabA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/headlinesBoxTabA"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="18dp"
                            android:text="this is a fucking amazing super duper awsomeeeee prize !!!!! wooowwwwwwwww"
                            android:textColor="#303030"
                            android:textSize="15sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tabB"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageViewTabB"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tabsBox"
                            android:layout_marginTop="30dp"
                            android:adjustViewBounds="true" />

                        <RelativeLayout
                            android:id="@+id/headlinesBoxTabB"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageViewTabB">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="15dp">

                                <TextView
                                    android:id="@+id/giftNameTabB"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Name of the gift"
                                    android:textColor="#303030"
                                    android:textSize="17sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/companyNameTabB"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/giftNameTabB"
                                    android:text="Comapny name"
                                    android:textColor="#303030"
                                    android:textSize="13sp" />
                            </RelativeLayout>


                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="15dp">

                                <TextView
                                    android:id="@+id/moneyTabB"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:text="100$"
                                    android:textColor="#9254ff"
                                    android:textSize="17sp" />

                                <TextView
                                    android:id="@+id/worthTabB"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_below="@+id/moneyTabB"
                                    android:text="Worth"
                                    android:textColor="#aaaaaa"
                                    android:textSize="13sp" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/informationTabB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/headlinesBoxTabB"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="18dp"
                            android:text="Lorem ipusom this great prize."
                            android:textColor="#303030"
                            android:textSize="15sp" />

                    </LinearLayout>

                </FrameLayout>
            </LinearLayout>
        </TabHost>
    </ScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp" />
</RelativeLayout>

