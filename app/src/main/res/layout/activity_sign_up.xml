<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_sign_up"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    tools:context="com.example.zakiva.santa.SignUp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/sign_up_cover" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="14dp"
        android:text="Sign Up"
        android:textSize="17sp"
        android:textColor="#303030"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@id/textView2"
        android:layout_marginTop="7dp"
        android:text="In order to keep playing &amp; winning you need to signup via one of the following platforms:"
        android:textSize="14sp"
        android:textColor="#303030"/>

    <Button
        android:id="@+id/fbSignInBtn"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#3b5998"
        android:text="Continue with Facebook"
        android:onClick="goToFacebookSignIn"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <Button
        android:id="@+id/googleSignBtn"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/fbSignInBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#fafafa"
        android:text="Continue with Google"
        android:onClick="goToGoogleSignIn"
        android:textColor="#303030"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/googleSignBtn"
        android:text="Not Now"
        android:textSize="12sp"
        android:padding="30dp"
        android:background="#ffffff"
        android:layout_centerHorizontal="true"
        android:onClick="backToScoreButton"/>


</RelativeLayout>